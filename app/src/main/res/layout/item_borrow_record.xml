<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    android:clipChildren="true"
    android:clipToPadding="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/markLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/avatar"
                    android:layout_width="@dimen/avatar_size_small"
                    android:layout_height="@dimen/avatar_size_small"
                    android:scaleType="centerCrop"
                    tools:src="@drawable/avatar"
                    app:riv_corner_radius="1000dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/nickname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginTop="2dp"
                        android:gravity="center_vertical"
                        android:singleLine="true"
                        android:textColor="@color/textPrimary"
                        android:textSize="14sp"
                        tools:text="PureDark"/>
                    <TextView
                        android:id="@+id/content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:gravity="center_vertical"
                        android:maxLines="2"
                        android:lineSpacingExtra="2dp"
                        tools:text="请求借阅《苏菲的选择》"
                        android:textColor="@color/textPrimary"
                        android:textSize="14sp"/>
                </LinearLayout>
            </LinearLayout>

            <com.gc.materialdesign.views.ButtonFlat
                android:id="@+id/btnDecline"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/half_margin"
                android:layout_marginLeft="@dimen/half_margin"
                android:background="@color/cpb_red"
                android:text="拒绝"/>
            <com.gc.materialdesign.views.ButtonFlat
                android:id="@+id/btnAccept"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/half_margin"
                android:layout_marginLeft="@dimen/half_margin"
                android:background="@color/cpb_blue"
                android:text="同意"/>
            <com.gc.materialdesign.views.ButtonFlat
                android:id="@+id/btnReturn"
                android:visibility="gone"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/half_margin"
                android:background="@color/cpb_blue"
                android:text="确认已还"/>
            <TextView
                android:id="@+id/status"
                android:visibility="gone"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/half_margin"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:textColor="@color/textSecoundary"
                android:textSize="14sp"
                tools:text="未归还"/>
        </LinearLayout>

        <TextView
            android:id="@+id/datetime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/half_margin"
            android:layout_marginRight="@dimen/half_margin"
            android:singleLine="true"
            android:textColor="@color/textSecoundary"
            android:textSize="12sp"
            tools:text="2015-11-09 03:16:15"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="bottom"
        android:background="@drawable/list_divider_h" />
</LinearLayout>