<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:orientation="vertical"
    android:background="@color/white"
    android:clipChildren="true"
    android:clipToPadding="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.balysv.materialripple.MaterialRippleLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rippleLayout"
            android:padding="8dp"
            app:mrl_rippleOverlay="true"
            app:mrl_rippleColor="@color/black"
            app:mrl_rippleAlpha="0.1"
            app:mrl_rippleDimension="10dp"
            app:mrl_rippleHover="true"
            app:mrl_rippleDuration="250"
            app:mrl_rippleFadeDuration="75"
            app:mrl_rippleDelayClick="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/markLayout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="8dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <com.makeramen.roundedimageview.RoundedImageView
                                android:id="@+id/avatar"
                                android:layout_width="@dimen/avatar_size_small"
                                android:layout_height="@dimen/avatar_size_small"
                                android:scaleType="centerCrop"
                                tools:src="@drawable/avatar"
                                app:riv_corner_radius="1000dp"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="8dp"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/nickname"
                                    android:layout_width="wrap_content"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:gravity="center_vertical"
                                    android:singleLine="true"
                                    android:textColor="@color/textPrimary"
                                    android:textSize="14sp"
                                    tools:text="PureDark"/>

                                <TextView
                                    android:id="@+id/datetime"
                                    android:layout_width="wrap_content"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:gravity="center_vertical"
                                    android:singleLine="true"
                                    android:textColor="@color/textSecoundary"
                                    android:textSize="12sp"
                                    tools:text="2015-11-09 03:16:15"/>
                            </LinearLayout>
                        </LinearLayout>

                        <TextView
                            android:id="@+id/content"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:gravity="center_vertical"
                            android:maxLines="6"
                            android:lineSpacingExtra="2dp"
                            android:textColor="@color/textPrimary"
                            android:textSize="14sp"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="70dp"
                    android:layout_height="136dp"
                    android:layout_alignParentRight="true"
                    android:orientation="vertical">
                </LinearLayout>
            </LinearLayout>
        </com.balysv.materialripple.MaterialRippleLayout>

        <LinearLayout
            android:id="@+id/book"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="8dp"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/book_cover"
                android:layout_width="70dp"
                android:layout_height="98dp"
                tools:src="@drawable/cover"
                android:scaleType="fitXY"/>
            <TextView
                android:id="@+id/book_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="center"
                android:lines="2"
                android:ellipsize="end"
                android:textColor="@color/textPrimary"
                android:textSize="11sp"
                tools:text="x86 PC汇编语言、设计与接口"/>
        </LinearLayout>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="bottom"
        android:background="@drawable/list_divider_h" />
</LinearLayout>